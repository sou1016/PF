<!DOCTYPE html>
<html>
  <head>
    <title>Clothesgram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if member_signed_in? %>
        <li>
          <%= link_to "投稿する", new_public_post_path %>
        </li>
        <li>
          <%= link_to "投稿一覧", public_posts_path %>
        </li>
        <li>
          <%= link_to "マイページ", public_member_path(current_member.id) %>
        </li>
        <li>
          <%= link_to "ユーザー一覧", public_members_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_member_session_path, method: :delete %>
        </li>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to "投稿一覧", admin_posts_path %>
        </li>
        <li>
          <%= link_to "ジャンル一覧、登録", admin_genres_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_member_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_member_session_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
