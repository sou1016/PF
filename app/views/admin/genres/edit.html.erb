<div class="form-group">
  <h1 class="mb-3 font-weight-normal text-center">ジャンル編集</h1>
  <div calss="text-center">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="text-center">
    <%= form_with model: [:admin, @genre] do |f| %>
      <%= f.text_field :name, placeholder:"ジャンル名" %>
      <%= f.submit "変更を保存" %>
    <% end %>
  </div>
</div>