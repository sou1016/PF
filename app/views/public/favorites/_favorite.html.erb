<% if post.favorited_by?(current_member) %>
    <%= link_to public_post_favorites_path(post), method: :delete, remote: true, class:"text-dark" do %>
      ♥<%= post.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to public_post_favorites_path(post), method: :post, remote: true, class:"text-dark" do %>
      ♡<%= post.favorites.count %>
    <% end %>
<% end %>