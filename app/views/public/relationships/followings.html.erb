<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @members.each do |member| %>
      <tr>
        <td>
          <%= link_to public_members_path(member.id) do %>
            <%= image_tag member.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td><%= member.name %></td>
        <% if current_member != member %>
          <% if current_member.following?(member) %>
            <th><%= link_to "フォロー中", public_member_relationships_path(member.id), method: :delete, class: "btn btn-info" %></th>
          <% else %>
            <th><%= link_to "フォローする", public_member_relationships_path(member.id), method: :post, class: "btn btn-success" %></th>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>