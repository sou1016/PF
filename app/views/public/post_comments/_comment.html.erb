<p>コメント件数：<%= post.post_comments.count %></p><br>
<% post.post_comments.each do |post_comment| %>
  <p><%= image_tag post_comment.member.get_profile_image(100,100) %></p>
  <%= post_comment.member.name %>
  <%= post_comment.comment %><br>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %>
  <% if post_comment.member == current_member %>
    <%= link_to "削除", public_post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
  <% end %>
<% end %>
