<h1>ユーザー詳細</h1>
<!--ユーザーの詳細-->
<tr>
  <td><%= @member.name %></td>
  <td><%= image_tag @member.get_profile_image(100,100) %></td>
  <%= link_to public_member_followings_path(@member.id) do %>
    <td>フォロー中: <%= @member.followings.count %></td>
  <% end %>
  <%= link_to public_member_followers_path(@member.id) do %>
    <td>フォロワー: <%= @member.followers.count %></td>
  <% end %>
  <% if current_member.following?(@member) %>
    <td><%= link_to "フォロー中", public_member_relationships_path(@member.id), method: :delete %></td>
  <% else %>
    <td><%= link_to "フォローする", public_member_relationships_path(@member.id), method: :post %></td>
  <% end %>
  <% if @member.name != "guest" %>
    <td><%= link_to "編集", edit_public_member_path(@member) %></td>
  <% end %>
  <td><%= link_to "ログアウト", destroy_member_session_path, method: :delete %></td>
</tr>

<!--ユーザーの投稿-->
<% @post.each do |post| %>
  <%= link_to public_post_path(post.id) do %><br>
    <%= image_tag post.get_image(150, 150) %>
  <% end %>
  <p>概要：<%= post.body %></p>
  <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>
<% end %>