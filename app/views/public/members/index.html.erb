<div class="container-lg">
  <div class="row">
    <h1>ユーザー一覧</h1>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <tbody>
        <% @member.each do |member| %>
          <tr>
            <td>
              <%= link_to public_member_path(member.id) do %>
              <%= image_tag member.get_profile_image(50, 50) %>
              <% end %>
            </td>
            <td><%= member.name %></td>
            <% if current_member != member %>
              <% if current_member.following?(member) %>
                <td><%= link_to "フォロー中", public_member_relationships_path(member.id), method: :delete, class: "btn btn-dark" %></td>
              <% else %>
                <td><%= link_to "フォローする", public_member_relationships_path(member.id), method: :post, class: "btn btn-light" %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>