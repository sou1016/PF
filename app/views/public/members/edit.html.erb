<div class="form-group">
  <h1 class="mb-3 font-weight-normal text-center">ユーザー編集</h1>
  <div class="text-center">
    <% if @member.errors.any? %>
      <%= @member.errors.count %>件のエラーが発生しました
      <ul>
        <% @member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: [:public, @member] do |f| %>
    <div class="form-group text-center">
      <label class="h5">名前</label> :
      <%= f.text_field :name, placeholder:"名前" %>
    </div>
    <div class="form-group text-center">
      <label class="h5">プロフィール画像</label> :
      <%= f.file_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <div class="text-center">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>